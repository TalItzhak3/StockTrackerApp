<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Row 1: Logo and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/transaction_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:contentDescription="Company Logo"
            android:layout_marginEnd="12dp" />

        <!-- Name and Symbol -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple Inc."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/transaction_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAPL"
                android:textSize="16sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Transaction Type -->
        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:textColor="@color/green"/>
    </LinearLayout>

    <!-- Row 2: Date -->
    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 01/01/2025"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp"/>

    <!-- Row 3: Price -->
    <TextView
        android:id="@+id/transaction_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: ₪150.00"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <!-- Row 4: Quantity -->
    <TextView
        android:id="@+id/transaction_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity: 10"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Row 5: Total Value -->
    <TextView
        android:id="@+id/transaction_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Value: ₪1,500.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</LinearLayout>