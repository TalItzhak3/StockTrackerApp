<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Logo, Company Name and Symbol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/stock_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Stock Logo"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/stock_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SYMBOL"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Quantity and Total Value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity: 0"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/total_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Value: ₪0.00"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Row 3: Buy and Sell Prices -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/buy_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buy: ₪0.00"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/sell_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sell: ₪0.00"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Row 4: Profit/Loss -->
        <TextView
            android:id="@+id/profit_loss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profit/Loss: ₪0.00 (0.00%)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Row 5: Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close Position"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/red"/>

            <Button
                android:id="@+id/details_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Details"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/purple_500"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>