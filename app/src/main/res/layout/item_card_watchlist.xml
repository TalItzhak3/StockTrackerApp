<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Row 1: Logo and Stock Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/stock_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:contentDescription="Stock Logo"
            android:layout_marginEnd="8dp" />

        <!-- Stock Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/stock_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symbol"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Price: $0.00"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/stock_price_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Change: 0.00%"
                android:textSize="14sp"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>

    <!-- Row 2: Remove and More Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/remove_from_watchlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove from Watchlist"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/stock_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Row 3: View Graph -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/view_graph_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Graph"
            android:backgroundTint="@color/purple_200" />
    </LinearLayout>
</LinearLayout>
